{% extends "sacrud/types/SacrudBase.jinja2" %}

{% block sacrud_column %}
  <input type="text"
        class="sacrud_datetime {{ css_styles }}"
        id="sacrud_datetime_{{ col.name }}"
        name="{{ col.name }}"
        value="{{ value }}"
        />

    <script>
        $(document).ready(function () {
            $('#sacrud_datetime_{{ col.name }}').datetimepicker({
                stepMinute: 10,
                dateFormat: "yy-mm-dd",
                // timeOnlyTitle: 'Выберите время',
                // timeText: 'Время',
                // hourText: 'Часы',
                // minuteText: 'Минуты',
                // secondText: 'Секунды',
                // closeText: 'Закрыть',
                // minDate: 0,
                // hourMin: 8,
