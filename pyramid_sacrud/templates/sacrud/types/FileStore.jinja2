{% extends "sacrud/types/SacrudBase.jinja2" %}

{% block sacrud_column %}
  {% if obj and value %}
    <a href="{{ value }}"><img src="{{ value }}" style="width: 100px"/></a>
  {% endif %}
  <input type="file"
        class="sacrud_filestore {{ css_styles }}"
        id="sacrud_filestore_{{ col.name }}"
        name="{{ col.name }}"
        value="{{ value }}"
        />
{% endblock %}
