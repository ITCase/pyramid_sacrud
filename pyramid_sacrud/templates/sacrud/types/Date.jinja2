{% extends "sacrud/types/SacrudBase.jinja2" %}

{% block sacrud_column %}
    {# <input type="date" class="sacrud_date {{ css_styles }}" id="sacrud_date_{{ col.name }}" name="{{ col.name }}" value="{{ value }}" /> #}

    <p>Date: <input type="text" class="sacrud_date {{ css_styles }}" id="sacrud_date_{{ col.name }}" name="{{ col.name }}" value="{{ value }}" /></p>

    <script>
        $(document).ready(function () {
            $("#sacrud_date_{{ col.name }}").datepicker({
                showButtonPanel: true,
                changeMonth: true,
                changeYear: true,
                dateFormat: "yy-mm-dd",
            });
        });
    </script>
{% endblock %}
