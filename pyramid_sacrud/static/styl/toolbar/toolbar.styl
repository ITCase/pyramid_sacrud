.toolbar-button__item_type_red:hover
  background: #E73212

.toolbar-button__item:hover .toolbar-button__item-name,
.toolbar-button__item:hover .toolbar-button__item-link,
.toolbar-button__item:hover .toolbar-button__item-button
  color: #fff

.toolbar-button__item_state_disable
  background: #eee
  cursor: default

.toolbar-button__item-name,
.toolbar-button__item-link,
.toolbar-button__item-button
  color: #777

.toolbar-button__item_state_disable:hover,
.toolbar-button__item_state_disable:hover .toolbar-button__item-name,
.toolbar-button__item_state_disable:hover .toolbar-button__item-link,
.toolbar-button__item_state_disable:hover .toolbar-button__item-button
  background: #eee
  color: #777

.toolbar-search
  width: 20%
  float: right
  display: table
  padding: 10px 15px 5px 0

.toolbar-search__inner
  display: table-cell
  vertical-align: middle

.toolbar:after
  display: block
  clear: both
  content: ""

