.sacrud-grid
  width: auto

.sacrud-grid__title
  float: left
  font-family: 'Segoe UI Light_', 'Open Sans Light', Verdana, Arial, Helvetica, sans-serif
  font-weight: 300
  color: #000000
  font-size: 1.6em
  text-transform: uppercase
  padding: 0 0 0.5em 0

.sacrud-grid__action
  float: right

.sacrud-grid__toolbar
  width: 100%
  margin: 1em 0 20px 0
  clear: both

.sacrud-grid-content
  width: 100%
  padding: 0
  zoom: 1

.sacrud-grid-content:after
  display: block
  clear: both
  content: ""

.sacrud-grid-content__left
  width: 100%
  float: left
  position: relative

.sacrud-grid-content__left-inner
  padding: 0 220px 0 0

.sacrud-grid-content__right
  width: 200px
  float: right
  margin-left: -205px
  position: relative

.sacrud-grid-content-grid
  width: 100%
  border-collapse: collapse
  position: relative
  margin: 20px 0 0 0

.sacrud-grid-content-grid:first-child
  margin: 0

.sacrud-grid-content-grid__header
  width: auto

.sacrud-grid-content-grid__header-row
  color: #444
  border: 1px solid #eaeaea

.sacrud-grid-content-grid__header-item
  color: #444
  text-align: left
  padding: 0.5em 1em
  background: #edf4fc
  font: 0.9em 'Segoe UI_', 'Open Sans', Verdana, Arial, Helvetica, sans-serif
  border: none

.sacrud-grid-content-grid__header-item:first-child
  width: 20px
  padding: 0.5em 1em
  text-align: center

.sacrud-grid-content-grid__header-item-link
  color: #4183c4
  text-decoration: none

.sacrud-grid-content-grid__header-item-link:hover
  color: #4183c4
  text-decoration: underline

.sacrud-grid-content-grid__body-row
  color: #444
  border: 1px #eaeaea solid
  background: #fff
  -webkit-transition: background-color 500ms ease-out 3ms
  -moz-transition: background-color 500ms ease-out 3ms
  -o-transition: background-color 500ms ease-out 3ms
  transition: background-color 500ms ease-out 3ms

.sacrud-grid-content-grid__body-row_type_group
  border: 1px solid #eaeaea
  border-bottom: none
  background: #7AA8D6
  position: relative

.sacrud-grid-content-grid__body-row_type_group .sacrud-grid-content-grid__body-item
  text-align: left !important

.sacrud-grid-content-grid__body-row_type_group-title
  font-family: 'Segoe UI Light_', 'Open Sans Light', Verdana, Arial, Helvetica, sans-serif
  font-weight: 300
  color: #fff
  font-size: 1.1em
  text-transform: uppercase
  padding: 0.2em 0.4em

.sacrud-grid-content-grid__body-row_type_group-toogle
  right: 0.6em
  top: 0.6em
  cursor: pointer
  position: absolute
  border: solid 1px none
  padding: 0.6em
  line-height: 0

.sacrud-grid-content-grid__body-row_type_group-toogle:after
  width: 0
  height: 0
  border-style: solid
  border-width: 7px 5px 0 5px
  border-color: #eeeeee transparent transparent transparent
  line-height: 0px
  _border-color: #eeeeee #000000 #000000 #000000
  // _filter: progid:DXImageTransform.Microsoft.Chroma(color='#eeeeee')
  content: ""
  display: block

.sacrud-grid-content-grid__body-row_type_group:hover
  background: #7AA8D6 !important

.sacrud-grid-content-grid__body-row_state_active,
.sacrud-grid-content-grid__body-row_state_active:hover
  background: #FEFAE7 !important

.sacrud-grid-content-grid__body-row:hover
  background: #F4F9FE
  -webkit-transition: background-color 500ms ease-out 3ms
  -moz-transition: background-color 500ms ease-out 3ms
  -o-transition: background-color 500ms ease-out 3ms
  transition: background-color 500ms ease-out 3ms

.sacrud-grid-content-grid__body-item
  padding: 1em
  vertical-align: top
  font: 0.9em 'Segoe UI_', 'Open Sans', Verdana, Arial, Helvetica, sans-serif
  zoom: 1

.sacrud-grid-content-grid__body-item:after
  display: block
  clear: both
  content: ""

.sacrud-grid-content-grid__body-item:first-child
  width: 20px
  padding: 0.5em 1em
  text-align: center

.sacrud-grid-content-grid__body-item-name
  padding: 1em 0 0 0

.sacrud-grid-content-grid__body-item-link
  color: #4183c4

.sacrud-grid-content-grid__body-item-link:hover
  color: #444

.sacrud-grid-content-grid__body-item-desc
  width: 500px
  font: italic 0.9em 'Segoe UI_', 'Open Sans', Verdana, Arial, Helvetica, sans-serif
  color: #777
  padding: 0.5em 0 0 0

.sacrud-grid-content__paginator
  text-align: center

.sacrud-grid-content-filter
  width: auto

.sacrud-grid-content-filter__group
  border-bottom: solid 1px #eee
  margin: 0 0 20px 0

.sacrud-grid-content-filter__group-title
  border: solid 1px #eee
  border-bottom: none
  display: block
  position: relative
  padding: 10px 20px
  text-decoration: none
  color: #444
  background: #edf4fc
  font: 1.2em 'Segoe UI_', 'Open Sans', Verdana, Arial, Helvetica, sans-serif

.sacrud-grid-content-filter__group-title:hover
  color: #4183c4
  text-decoration: underline

.sacrud-grid-content-filter__group-item
  border: solid 1px #eee
  padding: 10px 20px
  font: 0.9em 'Segoe UI_', 'Open Sans', Verdana, Arial, Helvetica, sans-serif
  display: block
  text-decoration: none
  color: #444

.sacrud-grid-content-filter__group-item_state_active,
.sacrud-grid-content-filter__group-item_state_active:hover
  background: #4183c4
  color: #fff !important

.sacrud-grid-content-filter__group-item:hover
  color: #4183c4
  text-decoration: underline

.table-tr-selected-class
  background-color: #EEEEEE !important
  border-color: #CCCCCC !important
  color: #454545 !important
  background-image: none, linear-gradient(to bottom, rgba(0, 0, 0, 0.13) 0px, rgba(0, 0, 0, 0.08) 100%) !important
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.15) inset !important

.sacrud-grid-field
  display: table
  white-space: nowrap
  float: left
  margin: 0 1.5em 0 0

.sacrud-grid-field__item
  display: inline-block

.sacrud-grid-field__name
  display: inline-block
  padding: 0.2em 0 0 0.2em

